<% include partials/head.ejs %>
<body id='gif'>
  <% include partials/nav.ejs %>
  <div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
      <% if (docs.length > 0) { %>
          <h4 class="title"><%= docs[0].airline %> flights</h4>
        <table class="table table-hover">
          <thead>
            <tr>
              <th>flightNumber</th>
              <th>totalSeats</th>
              <th>filledSeat</th>
              <th>airline</th>
            </tr>
          </thead>
          <tbody>
            <% docs.forEach( flight => { %>
              <tr>
                <td><%= flight.flightNumber %></td>
                <td><%= flight.totalSeats %></td>
                <td><%= flight.filledSeat %></td>
                <td><%= flight.airline %></td>
                <td>
                   <a href="edit/<%= flight._id %>"><input type="button" class="btn btn-info" value="Edit"></a>
                   <input type="button" class="btn btn-danger btn-delete" value="Remove" data-id="<%= flight._id %>">
                 </td>
             </tr>
            <% }); %>
          </tbody>
        </table>
        <% } else {  %>
          <h4>There are no flights yet!</h4>
        <% } %>
      </div>
        </div>
          </div>
  <% include partials/scripts.ejs %>
</body>
</html>
